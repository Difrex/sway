set $mode_screenshot (r) Region, (a) All
mode "$mode_screenshot" {
    bindsym r exec --no-startup-id ~/.config/sway/scripts/screenshot.sh r, mode "default"
    bindsym a exec --no-startup-id ~/.config/sway/scripts/screenshot.sh a, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+c mode "$mode_screenshot"

