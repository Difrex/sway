# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
# Dark
# bindsym $mod+Return exec gnome-terminal --profile='Solarized Dark'
# Light
bindsym $mod+Return exec gnome-terminal --profile='Solarized Light'

# use GNU Emacs eshell as an terminal emulatory
# bindsym $mod+Shift+Return exec emacsclient -c -e "(eshell 'N)"

# Start emacsclient
bindsym --to-code $mod+a exec emacsclient -c

# kill focused window
bindsym --to-code $mod+q kill

# start dmenu (a program launcher)
# bindsym $mod+d exec dmenu_run
bindsym --to-code $mod+d exec rofi -show run

# rofi-pass
bindsym --to-code $mod+p exec ~/.local/bin/pm -R

