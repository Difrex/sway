#  \__,_| .__/| .__/  |___/\___|\__|\__|_|_| |_|\__, |___/
#       | |   | |                                __/ |
#       |_|   |_|                               |___/
assign [class="TelegramDesktop"] $workspace4
assign [class="Firefox"] $workspace1
assign [class="Epiphany"] $workspace1
assign [class="Brave"] $workspace1
# assign [class="Chromium"] $workspace1
assign [class="Evolution"] $workspace5
assign [class="gnome-terminal"] $workspace2

# reload the configuration file
bindsym --to-code $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym --to-code $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
# These bindings trigger as soon as you enter the resize mode

  # Pressing left will shrink the window’s width.
  # Pressing right will grow the window’s width.
  # Pressing up will shrink the window’s height.
  # Pressing down will grow the window’s height.
  bindsym --to-code j resize shrink width 10 px or 10 ppt
  bindsym --to-code k resize grow height 10 px or 10 ppt
  bindsym --to-code l resize shrink height 10 px or 10 ppt
  bindsym --to-code semicolon resize grow width 10 px or 10 ppt

  # same bindings, but for the arrow keys
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym --to-code $mod+r mode "resize"

bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/sway/scripts/volume.py +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/sway/scripts/volume.py -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id ~/.config/sway/scripts/volume.py mute # mute sound

# MPD
bindsym XF86AudioPlay exec mpc toggle && pkill --signal RTMIN+2 i3blocks
bindsym XF86AudioPause exec mpc toggle && pkill --signal RTMIN+2 i3blocks
bindsym XF86AudioNext exec mpc next && pkill --signal RTMIN+2 i3blocks
bindsym XF86AudioPrev exec mpc prev && pkill --signal RTMIN+2 i3blocks

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec light -A 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 5 # decrease screen brightness

# Keyboard brightness
bindsym XF86KbdBrightnessUp exec ~/.config/sway/scripts/set_kb_light.py --up
bindsym XF86KbdBrightnessDown exec ~/.config/sway/scripts/set_kb_light.py --down

# New window size
default_border pixel 6
default_floating_border pixel 2

# Scratchpad
# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# smart_gaps on
# smart_borders on
# gaps inner 15
# gaps outer 10
hide_edge_borders smart

# Wallpapers
output "*" background ~/Изображения/wallpapers/collection/Landscapes/landscape_1.jpg fill

# Set random wallpaper
bindsym --to-code $mod+Shift+w exec ~/.config/sway/scripts/set_wallpaper.py

