# kill focused window
bindsym $mod+q kill

# start dmenu (a program launcher)
# bindsym $mod+d exec dmenu_run
bindsym $mod+d exec rofi -show run

# rofi-pass
bindsym $mod+p exec ~/.local/bin/pm -R

