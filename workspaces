###########          Workspace Bindings          ###############

# switch to workspace
# bindsym --to-code $Mod+1 workspace number 1
bindsym --to-code $Mod+1 workspace $workspace1
bindsym --to-code $Mod+2 workspace $workspace2
bindsym --to-code $Mod+3 workspace $workspace3
bindsym --to-code $Mod+4 workspace $workspace4
bindsym --to-code $Mod+5 workspace $workspace5
bindsym --to-code $Mod+6 workspace $workspace6
bindsym --to-code $Mod+7 workspace number 7
bindsym --to-code $Mod+8 workspace number 8

# switch to next or previous workspace
bindsym --to-code $Mod+Mod1+Left workspace prev
bindsym --to-code $Mod+Mod1+Right workspace next

# move focused container to workspace
bindsym --to-code $Mod+Shift+1 move container to workspace $workspace1; workspace $workspace1
bindsym --to-code $Mod+Shift+2 move container to workspace $workspace2; workspace $workspace2
bindsym --to-code $Mod+Shift+3 move container to workspace $workspace3; workspace $workspace3
bindsym --to-code $Mod+Shift+4 move container to workspace $workspace4; workspace $workspace4
bindsym --to-code $Mod+Shift+5 move container to workspace $workspace5; workspace $workspace5
bindsym --to-code $Mod+Shift+6 move container to workspace $workspace6; workspace $workspace6
bindsym --to-code $Mod+Shift+7 move container to workspace number 7; workspace number 7
bindsym --to-code $Mod+Shift+8 move container to workspace number 8; workspace number 8
